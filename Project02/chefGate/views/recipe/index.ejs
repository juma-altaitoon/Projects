<h1>Recipe Index</h1>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col">Created At</th>
        <th scope="col">Updated At</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
<% recipes.forEach(function(recipe){ %>    
      <tr>
        <td><a href="/recipe/details?id=<%= recipe._id %>"><%= recipe.mealName %></a></td>
        <td><%= recipe.category %></td>
        <td><%= moment(recipe.createdAt).fromNow() %></td>
        <td><%= moment(recipe.updatedAt).fromNow() %></td>
        <td><a href="/recipe/edit?id=<%= recipe._id %>">Edit</a></td>
        <td><a href="/recipe/delete?id=<%= recipe._id %>">Delete</a></td>
      </tr>
<% }) %>
    </tbody>
</table>